@using SquishIt.Framework
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @MvcHtmlString.Create(Bundle.Css()
        .Add("~/Content/bootstrap.min.css")
        .Add("~/Content/site.css")
        .Add("~/Content/themes/base/core.css")
        .Add("~/Content/themes/base/theme.css")
        .Add("~/Content/themes/base/autocomplete.css")
        .Add("~/Content/jquery.multiselect.css")
        .Render("~/combined_#.css"))

    @MvcHtmlString.Create(Bundle.JavaScript()
            .Add("~/Scripts/jquery-2.1.3.min.js")
            .Add("~/Scripts/jquery-ui-1.11.4.min.js")
            .Add("~/Scripts/jquery.multiselect.min.js")
            .Add("~/Scripts/truffler-stats.js")
            .ForceDebug()
            .Render("~/combined_#.js"))

</head>

<body>
    <nav class="navbar navbar-default navbar-static-top">
                <div class="container">
                    <div class="navbar-header"><h1>
    @Html.ActionLink("EPiServer Find Sample", "Index", "Home", null, new { @class = "brand" })
</h1>
                    </div>
                    <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Basic", "Index", "BasicSearch")</li>
                        <li>@Html.ActionLink("Sorting", "Index", "Sorting")</li>
                        <li>@Html.ActionLink("Paging", "Index", "Paging")</li>
                        <li>@Html.ActionLink("Highlighting", "Index", "Highlighting")</li>
                        <li>@Html.ActionLink("Filters", "Index", "Filtering")</li>
                        <li>@Html.ActionLink("Facets", "Index", "Facets")</li>
                        <li>@Html.ActionLink("Autocomplete", "Index", "Autocomplete")</li>
                        <li>@Html.ActionLink("Map", "Index", "Map")</li>
                    </ul>
                  </div>
                </div>
        </nav>
        <div class="container">
            <div class="content">
                @RenderBody()
            </div>
        </div>

        @if (System.Configuration.ConfigurationManager.AppSettings["statsCode"] != null)
        {
            var statsCode = System.Configuration.ConfigurationManager.AppSettings["statsCode"];
            <script src="//static.getclicky.com/js" type="text/javascript"></script>
            <script type="text/javascript">    try { clicky.init(@Html.Raw(statsCode)); } catch (e) { }</script>
            <noscript><p><img alt="Clicky" width="1" height="1" src="//in.getclicky.com/@Html.Raw(statsCode)ns.gif" /></p></noscript>
        }
</body>
</html>
