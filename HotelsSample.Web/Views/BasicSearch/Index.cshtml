@model FindSample.Models.SearchResult

@{
    ViewBag.Title = "Basic";
}
<div class="page-header">
    <h1>Basic <small>The simplest of search listings</small></h1>
    <p>Search for something related to hotels, such as "pool", "luxury" or "resort".</p>
    @{ Html.RenderPartial("SourceCode"); }
</div>
<div class="row">
    <div class="span14">
    @using (Html.BeginForm())
    {
        @Html.TextBox("q", ViewBag.Query as string)
        <input type="submit" value="Search" />
    }
    </div>
</div>
<div class="row">
    <div class="span10">
        @if (Model != null)
        {
            Html.RenderPartial("SearchHits");
        }
    </div>
    <div class="span4"></div>
</div>
<script type="text/javascript">
    var hits = @Html.Raw(Json.Encode(ViewBag.Hits)) ;
    var query = @Html.Raw(Json.Encode(ViewBag.Query)) ;

    
</script>